{
  "description": "Cahoots zeigt dir Verbindungen von Journalisten zu Vereinen, Organisationen und Unternehmen.",
  "icons": {
    "128": "img/${ICON_128}",
    "16": "img/${ICON_16}",
    "48": "img/${ICON_48}"
  },
  "manifest_version": 2,
  "name": "Cahoots",
  "short_name": "Cahoots",
  "permissions": ["http://*/*"],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "${BUILD_CAHOOTS_VERSION}",
  "web_accessible_resources": [
    "verified.png"
  ],
  "content_scripts": [
    {
      "css": [
        "style.css",
        "cahoots-tooltipster.css"
      ],
      "js": [
        "jquery.js",
        "jquery_highlight.js",
        "tooltipster.main.min.js",
        "CahootsContentBundle.js",
        "ChromeContentScriptBundle.js",
        "ChromeContentScriptLoader.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "CahootsExtensionBundle.js",
      "ChromeExtensionBundle.js",
      "ChromeExtensionLoader.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "page_action": {
    "default_icon": {
      "19": "img/${ICON_19}",
      "38": "img/${ICON_38}"
    },
    "default_title": "default title cahoots page action"
  }
}