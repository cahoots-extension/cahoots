{
  "description": "Cahoots zeigt dir Verbindungen von Journalisten zu Vereinen, Organisationen und Unternehmen.",
  "icons": {
    "128": "img/${ICON_128}",
    "16": "img/${ICON_16}",
    "48": "img/${ICON_48}"
  },
  "manifest_version": 2,
  "name": "Cahoots",
  "short_name": "Cahoots",
  "permissions": ["http://*/*"],
  "version": "${BUILD_CAHOOTS_VERSION}",
  "web_accessible_resources": [
    "verified.png"
  ],
  "content_scripts": [
    {
      "css": [
        "style.css",
        "cahoots-tooltipster.css"
      ],
      "js": [
        "jquery.js",
        "jquery.highlight.js",
        "jquery.tooltipster.js",
        "content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "19": "img/${ICON_19}",
      "38": "img/${ICON_38}"
    },
    "default_title": "default title cahoots page action",
    "browser_style": true
  },

  "permissions": ["storage"]
}